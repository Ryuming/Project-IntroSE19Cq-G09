<main>
    <nav class="nav">
        <div class="nav-categories">
            <div class="dropdown nav-categories__select">
                <button class="btn btn-secondary dropdown-toggle nav-dropdown-btn" type="button" id="dropdownMenuButton"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Danh mục
                    <div class="dropdown-menu nav-dropdown-list nav-dropdown-list-categories"
                        aria-labelledby="dropdownMenuButton">
                        <ul class="row">
                       <btn class="col-6"><a href="/search_category/Hobbies" class="category">Hobbies</a></btn>
                            <btn class="col-6"><a href="/search_category/Social" class="category">Social</a></btn>
                            <btn class="col-6"><a href="/search_category/Video" class="category">Video</a></btn>
                            <btn class="col-6"><a href="/search_category/Random" class="category">Random</a></btn>
                            <btn class="col-6"><a href="/search_category/Random" class="category">Random</a></btn>
                            <btn class="col-6"><a href="/search_category/Tech" class="category">Tech</a></btn>
                            <btn class="col-6"><a href="/search_category/Gaming" class="category">Gaming</a></btn>
                            <btn class="col-6"><a href="/search_category/Science" class="category">Science</a></btn>
                            <btn class="col-6"><a href="/search_category/Exchange" class="category">Exchange</a></btn>
                            <btn class="col-6"><a href="/search_category/Pets" class="category">Pets</a></btn>
                            <btn class="col-6"><a href="/search_category/Entertainment" class="category">Entertainment</a>
                            </btn>
                            <btn class="col-6"><a href="/search_category/Education" class="category">Education</a></btn>
                            <btn class="col-6"><a href="/search_category/QAs" class="category">QAs</a></btn>
                            <btn class="col-6"><a href="/search_category/Politics" class="category">Politics</a></btn>
                    </ul>
                    </div>
                </button>
                <div class="dropdown-menu nav-dropdown-list nav-dropdown-list-categories"
                    aria-labelledby="dropdownMenuButton">
                    
                </div>
            </div>
        </div>
        <div class="nav-menu">
            <ul>
                <li class="active"><a href="#">Mới nhất </a></li>
                <li><a href="/sort_Like/{{inp_search}}">Nhiều like nhất </a></li>
                <li><a href="#">Chưa đọc </a></li>
                <li><a href="#">Xem nhiều nhất </a></li>
                <li><a href="#">Bảng xếp hạng thành viên </a></li>
            </ul>
        </div>
    </nav>
    <div class="posts">
        <div class="posts__head">
            <div class="posts__topic">Tiêu đề</div>
            <div class="posts__category">Danh mục</div>
            <div class="posts__users">Thành viên phản hồi</div>
            <div class="posts__replies">Số phản hồi</div>
            <div class="posts__views">Lượt xem</div>
            <div class="posts__activity">Thời gian</div>
        </div>
        <div class="posts__body">
            {{#each document}}
            <div class="posts__item {{#ifEven @index}}bg-f2f4f6{{/ifEven}}">
                <div class="posts__section-left">
                    <div class="posts__topic">
                        <div class="posts__content">
                            <a href="#">
                                <h3>{{this.title}}</h3>
                            </a>

                            <div class="posts__tags tags">
                                {{#each this.array}}
                                <a href="#" class= "bg-f26522" >{{this}}</a>
                                {{/each}}
                            </div>

                        </div>
                    </div>
                    <div class="posts__category"><a href="#" class="category"><i
                                class="bg-368f8b"></i>{{this.category}}</a>
                    </div>
                </div>
                <div class="posts__section-right">
                    <div class="posts__users">
                        <div>
                            <a href="#" class="avatar"><img src="/img/user_image_default.png" alt="avatar"></a>
                        </div>
                        <div>
                            <a href="#" class="avatar"><img src="/img/user_image_default.png" alt="avatar"></a>
                        </div>
                    </div>
                    <div class="posts__replies">{{this.reply}}</div>
                    <div class="posts__views">{{this.view}}</div>
                    <div class="posts__activity">{{this.time}}</div>
                </div>
            </div>
            {{/each}}

        </div>
        <div class="posts__btn"> Xem thêm</div>
    </div>
</main>
